	<!-- ADD PERSISTENCE SUPPORT HERE (jpa, hibernate, etc) -->
	
		<jdbc:embedded-database id="dataSource" type="HSQL">
			<jdbc:script location="/WEB-INF/create-db.sql" encoding="utf-8"/>
			<jdbc:script location="/WEB-INF/insert-data.sql" encoding="utf-8"/>
		</jdbc:embedded-database>
